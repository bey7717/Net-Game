<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mobileapp.puzzlegame.MainFragment"
        android:label="Main Screen"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_mainFragment_to_sampleFragment"
            app:destination="@id/sampleFragment" />
        <action
            android:id="@+id/action_mainFragment_to_gameHistoryFragment"
            app:destination="@id/gameHistoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.mobileapp.puzzlegame.GameFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_gameFragment_to_cellSizeSettingsFragment"
            app:destination="@id/cellSizeSettingsFragment" />
        <argument
            android:name="forceNewGame"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/sampleFragment"
        android:name="com.mobileapp.puzzlegame.SampleFragment"
        android:label="Sample"
        tools:layout="@layout/fragment_sample" />

    <fragment
        android:id="@+id/cellSizeSettingsFragment"
        android:name="com.mobileapp.puzzlegame.CellSizeSettingsFragment"
        android:label="Cell Size Settings"
        tools:layout="@layout/fragment_cell_size_settings">
        <action
            android:id="@+id/action_cellSizeSettingsFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/gameHistoryFragment"
        android:name="com.mobileapp.puzzlegame.GameHistoryFragment"
        android:label="Game History"
        tools:layout="@layout/fragment_game_history" />
</navigation>